@model TrustyPortfolio.Models.Domain.Project

@{
    ViewData["Title"] = Model.Title;
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">
            @if (Model != null) {
                <h1 class="mb-3">
                    @Model.Title
                </h1>
                <div class="d-flex justify-content-between mb-3">
                    <a style="text-decoration:none" href="@Model.ProjectUrl">
                        <img alt="Static Badge" src="https://img.shields.io/badge/Repo-white?style=social&logo=github">
                    </a>
                    <span>Published: @Model.PublishDate.ToShortDateString()</span>
                </div>
                <div class="mb-3 d-flex">
                    @foreach (var tag in Model.Tags) {
                        <span class="badge bg-secondary me-1">@tag.Name</span>
                    }
                </div>
                @if (Model.Blogs != null && Model.Blogs.Any()) {
                    <div class="accordion mb-4" id="accordionExample">
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="headingOne">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                                    Associated Blog Posts
                                </button>
                            </h2>
                            <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample" style="">
                                <div class="accordion-body">
                                    <ul class="list-group">
                                        @foreach (var blogPost in Model.Blogs) {
                                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                                <a href="/Blogs?urlHandle=@blogPost.UrlHandle">@blogPost.Title</a>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                <img src="@Model.FeaturedImageUrl" class="d-block img-fluid mb-3 w-100" />
                <div class="mb-3 blog-details-content">
                    @Html.Raw(Model.Content)
                </div>
            } else {
                <p>Project Post Not Found!</p>
            }
        </div>
    </div>
</div>

