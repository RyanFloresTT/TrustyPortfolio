<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-12">
            <h2 class="text-center">Featured Projects</h2>
        </div>
    </div>
    <div class="row justify-content-center">
            @if (Model != null && Model.Any()) {
                foreach (var project in Model) {
                    @if (project.Visible && project.Featured) {
                    <div class="col-lg-4 col-md-6 col-sm-12 mb-3 mt-4">
                        <div class="card mb-3">
                            <h3 class="card-header">@project.Title</h3>
                            <img src="@project.FeaturedImageUrl" />
                            <div class="card-body">
                                <p class="card-text">@project.Description</p>
                            </div>
                            <div class="col-12 d-flex">
                                @if (Model != null && project.Tags.Any()) {
                                    @foreach (var tag in project.Tags) {
                                        <span class="badge bg-primary ms-3">@tag.Name</span>
                                    }
                                } else {
                                    <p>This is where I'd put the tags.... if this project had any!</p>
                                }
                            </div>
                            <div class="card-body">
                                <a class="btn btn-primary card-link" asp-area="" asp-controller="Projects" asp-action="Index" asp-route-urlHandle="@project.UrlHandle">Learn More</a>
                            </div>
                            <div class="card-footer text-muted">
                                @project.PublishDate.ToShortDateString()
                            </div>
                        </div>
                    </div>
                    }
                }
            }
    </div>
    <div class="row justify-content-center">
        <div class="col-12 mt-4 mb-4">
            <h2 class="text-center">Explore More Projects</h2>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="row">
                @if (Model != null && Model.Any()) {
                    @foreach (var project in Model) {
                        @if (project.Visible && !project.Featured) {
                            <div class="col-lg-2 col-md-3 col-sm-6 mb-3">
                                <div class="card text-white bg-primary mb-3" style="max-width: 20rem;">
                                    <div class="card-header">@project.Title</div>
                                    <div class="card-body">
                                        <p class="card-text">@project.Description</p>
                                    </div>
                                    <a class="btn btn-secondary card-link m-2" asp-area="" asp-controller="Projects" asp-action="Index" asp-route-urlHandle="@project.UrlHandle">Read More</a>
                                    <div class="card-footer text-muted">
                                        @project.PublishDate.ToShortDateString()
                                    </div>
                                </div>
                            </div>
                        }
                    }
                } else {
                    <p>Sorry, no posts were found!</p>
                }
            </div>
        </div>
    </div>
</div>