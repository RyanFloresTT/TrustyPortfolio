@page "/Admin/Blogs/Edit/{UrlHandle}"

<EditForm Model="@BlogPost" OnValidSubmit="@HandleSubmit">
  <MudText Typo="Typo.h2">Title:</MudText>
  <MudInput Variant="Variant.Filled" @bind-Value="@BlogPost.Title" Text="@BlogPost.Title" />

  <MudText Typo="Typo.h2">Content:</MudText>
  <MudTextField Class="pb-16" @bind-Value="BlogPost.Content" T="string" Label="Outlined" Variant="Variant.Outlined" Text="@BlogPost.Content" Lines="100" />

    <MudButton Class="mb-16" FullWidth="true" Variant="Variant.Filled" Color="Color.Primary" ButtonType="ButtonType.Submit">Save Changes</MudButton>
</EditForm>
