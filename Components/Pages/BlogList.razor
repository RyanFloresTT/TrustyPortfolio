@page "/Blogs"
@using TrustyPortfolio.Components.Components

<div class="align-content-center">
    <h1 class="text-center mt-4">Featured Blogs: </h1>
</div>

<div class="d-flex flex-wrap">
    @if (!featuredBlogs.Any()) {
        <MudProgressLinear Color="Color.Primary" Indeterminate="true" Class="my-7" />
    } else {
        @foreach (var blog in featuredBlogs) {
            <div class="col-lg-4 col-md-6 col-sm-12 p-4">
                <FeaturedBlogCard BlogPost="blog" />
            </div>
        }
    }
</div>

<div class="align-content-center">
    <h1 class="text-center">More Blogs: </h1>
</div>

<div class="d-flex flex-wrap">
    @if (!blogs.Any()) {
        <MudProgressLinear Color="Color.Primary" Indeterminate="true" Class="my-7" />
    } else {
        @foreach (var blog in blogs) {
            <div class="col-lg-3 col-md-6 col-sm-6 p-4">
                <BlogCard BlogPost="blog" />
            </div>
        }
    }
</div>
