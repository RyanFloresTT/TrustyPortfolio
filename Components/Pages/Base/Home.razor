@page "/"
@using TrustyPortfolio.Components.Components

<PageTitle>Home</PageTitle>

@inherits LayoutComponentBase
@using TrustyPortfolio.Models.ViewModels

<div class="container col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-5 py-5">
        <div class="col-12 col-lg-6">
            <MudText Typo="Typo.h3">Hi! My name is Ryan!</MudText>
            <MudContainer Class="mt-6">
                <MudText Typo="Typo.h6">I'm a Software Engineer!</MudText>
            </MudContainer>
        </div>
        <div class="col-12 col-lg-6">
            <img style="border-radius: 50%" src="https://res.cloudinary.com/djdtmbpce/image/upload/c_crop,g_auto,h_800,w_800/l8mrq0vrbuaugbw9vpbt.jpg"
                 alt="Profile Picture ;)"
                 class="d-block mx-lg-auto img-fluid" width="300" />
        </div>
    </div>
</div>
<MudContainer Class="mt-16 mb-16 px-8" MaxWidth="MaxWidth.Medium">
    <FeaturedProjectsCarousel Projects="PortfolioData.FeaturedProjects" />
</MudContainer>
<MudContainer Class="mt-16 mb-16 px-8" MaxWidth="MaxWidth.Medium">
    <FeaturedBlogsCarousel Blogs="PortfolioData.FeaturedBlogs" />
</MudContainer>
