@page "/"
@using TrustyPortfolio.Components.Components

<PageTitle>Home</PageTitle>

@inherits LayoutComponentBase
@using TrustyPortfolio.Models.ViewModels

<div class="container col-xxl-8 px-4 py-5">
    <div class="row g-5 py-5">
        <div class="col-12 col-lg-6">
            <MudContainer Class="mt-6">
                <MudText Style="@($"color:#FFFFFF;")" Typo="Typo.h3" Class="mb-12">Hi! My name is Ryan!</MudText>
                <MudText Typo="Typo.h6">I'm a Software Engineer!</MudText>
            </MudContainer>
        </div>
        <div class="col-12 col-lg-6 d-flex justify-content-center">
            <img style="border-radius: 50%" src="https://res.cloudinary.com/djdtmbpce/image/upload/c_crop,g_auto,h_800,w_800/l8mrq0vrbuaugbw9vpbt.jpg"
                 alt="Profile Picture ;)"
                 class="img-fluid" width="250" />
        </div>
    </div>
</div>

<MudContainer Class="d-flex flex-wrap justify-content-center align-items-center mb-12" MaxWidth="MaxWidth.ExtraLarge">
    @if (!PortfolioData.FeaturedProjects.Any() && !PortfolioData.Projects.Any()) {
        <MudProgressCircular Color="Color.Primary" Style="height:35%;width:35%;" Indeterminate="true" />
    } else {
        @foreach (var project in PortfolioData.FeaturedProjects) {
            <MudItem lg="4" md="6" sm="12" Class="p-4">
                <FeaturedProjectCard Project="project" />
            </MudItem>
        }
    }
</MudContainer>

