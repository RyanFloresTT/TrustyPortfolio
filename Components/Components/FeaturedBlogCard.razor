<MudCard>
    <MudCardMedia Image="@BlogPost.FeaturedImageUrl" Height="200" />
    <MudCardContent>
        <MudText Typo="Typo.h5">@BlogPost.Title</MudText>
        <MudText Typo="Typo.body2">@BlogPost.Description</MudText>
    </MudCardContent>
    <MudCardActions>
        <MudButton Href="@GetURLHandle()" Variant="Variant.Text" Color="Color.Primary">Read More</MudButton>
    </MudCardActions>
</MudCard>