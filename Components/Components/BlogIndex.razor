@page "/Blogs/{UrlHandle}"
@using Markdig

@if (BlogPost == null) {
    <MudText Typo="Typo.h1">Searching For Blog Post...</MudText>
    <MudProgressLinear Color="Color.Primary" Indeterminate="true" Class="my-7" />
} else {
    <MudContainer>
        <MudText Align="Align.Center" Typo="Typo.h1">@BlogPost.Title</MudText>
    </MudContainer>
    <MudContainer MaxWidth="MaxWidth.Medium">
        <MudText Align="Align.Center" Typo="Typo.h6">@BlogPost.Description</MudText>
        <MudContainer>
            @((MarkupString) Markdown.ToHtml(BlogPost.Content, MarkdownPipeline))
        </MudContainer>
    </MudContainer>
}