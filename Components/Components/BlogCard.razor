<MudCard Elevation="5" Style="height: 200px; position: relative;">
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6" Class="mb-4">@BlogPost.Title</MudText>
            <MudText Typo="Typo.body2">@BlogPost.Description</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardActions Style="position: absolute; bottom: 0; left: 0; right: 0; padding: 8px;">
        <MudButton Href="@BlogPostUtil.GetURLHandle(BlogPost)" Variant="Variant.Text" Color="Color.Primary">Read More</MudButton>
    </MudCardActions>
</MudCard>
