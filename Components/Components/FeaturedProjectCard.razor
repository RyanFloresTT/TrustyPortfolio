<MudCard Elevation="15" Style="height: 400px; position: relative;">
    <MudCardMedia Image="@Project.FeaturedImageUrl" Height="200" />
    <MudCardContent>
        <MudText Typo="Typo.h5">@Project.Title</MudText>
        <MudText Style="overflow: hidden; text-overflow: ellipsis; white-space: nowrap;" Typo="Typo.body2">@Project.Description</MudText>
    </MudCardContent>
    <MudCardActions Style="position: absolute; bottom: 0; left: 0; right: 0; padding: 8px;">
        <MudButton Href="@GetURLHandle()" Variant="Variant.Text" Color="Color.Primary">Read More</MudButton>
        <MudLink Href="@Project.ProjectUrl"><MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Default" /></MudLink>
    </MudCardActions>
</MudCard>
